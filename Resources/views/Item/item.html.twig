<div class="card bg-dark border-primary h-100">
    <img src="{{ asset('images/default.jpg') | imagine_filter('thumbnail') }}" class="card-img-top position-absolute opacity-20 h-100" alt="...">
    <div class="card-body text-white z-index-10">
        <h1 class="d-inline-flex"><span class="badge badge-primary">{{ event.dateBegin|date('d') }}</span></h1>
        <h3 class="d-inline-flex">{{ event.dateBegin|date('F')|trans }}</h3>
        <h3 class="d-inline-flex text-primary font-weight-bold">{{ event.dateBegin|date('Y') }}</h3>
        <h3 class="card-title">{{ event.title }}</h3>
        <ul class="list-inline">
            <li class="list-inline-item"><i class="fa fa-tag text-primary" aria-hidden="true"></i> {{ event.eventType.label }}</li>
            {% if event.locationTitle is not empty %}<li class="list-inline-item"><i class="fa fa-location-arrow text-primary" aria-hidden="true"></i> {{ event.locationTitle }}</li>{% endif %}
        </ul>
        <a href="{{ path('owp_event_show', {'slug': event.slug}) }}" class="btn btn-primary stretched-link">Plus d'information</a>
    </div>
    {% if is_granted('edit', event) %}
        <div class="admin-quick-edit">
            <a href="{{ path('admin_owp_owpevent_event_edit', {'id': event.id}) }}" class='btn btn-outline-secondary' href=""><i class="fa fa-edit"></i></a>
            <button data-toggle="modal" data-target="#confirm-delete" data-href="{{ path('admin_owp_owpevent_event_delete', {'id': event.id}) }}" type="button" class="btn btn-outline-danger">
                <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
        </div>
    {% endif %}
</div>
